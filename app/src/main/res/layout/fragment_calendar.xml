<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendar_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/calendar_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendar"
        android:textSize="25sp"
        android:textStyle="bold"
        android:paddingBottom="10dp" />

    <CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <!-- Selected day summary -->
    <LinearLayout
        android:id="@+id/layout_selected_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/text_selected_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected date"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/text_selected_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mood: --/10"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/text_selected_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No entry for this day."
            android:textSize="16sp"
            android:paddingTop="4dp" />
    </LinearLayout>

    <!-- Average mood across users -->
    <LinearLayout
        android:id="@+id/layout_average_mood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/text_average_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average mood rating across all users"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/text_average_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-- / 10"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

    </LinearLayout>

</LinearLayout>
